<?xml version="1.0" encoding="utf-8"?>

<resources>

    <attr name="useParsiDigits" format="boolean" />
    <attr name="typefaceStyle" format="enum">
        <enum name="regular" value="0" />
        <enum name="semiBold" value="1" />
        <enum name="bold" value="2" />
        <enum name="italic" value="3" />
    </attr>
    <attr name="textSize" format="dimension"/>
    <attr name="textColor" format="color"/>

    <attr name="enableManualSwipe" format="boolean"/>
    <attr name="swipeDurationMillis" format="integer"/>

    <declare-styleable name="ParsiTextView">
        
        <attr name="useParsiDigits"/>
        <attr name="typefaceStyle" />

    </declare-styleable>

    <declare-styleable name="ParsiButton">

        <attr name="useParsiDigits" />
        <attr name="typefaceStyle" />

    </declare-styleable>

    <declare-styleable name="ParsiEditText">

        <attr name="useParsiDigits" />
        <attr name="typefaceStyle" />
        <attr name="hideBottomLine" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ParsiCheckBox">

        <attr name="useParsiDigits" />
        <attr name="typefaceStyle" />

    </declare-styleable>

    <declare-styleable name="ParsiRadioButton">

        <attr name="useParsiDigits" />
        <attr name="typefaceStyle" />

    </declare-styleable>

    <declare-styleable name="PidgetsViewPager">

        <attr name="enableManualSwipe" />
        <attr name="swipeDurationMillis" />

    </declare-styleable>

    <declare-styleable name="ParsiNumberPicker">

        <attr name="typefaceStyle"/>
        <attr name="textSize" />
        <attr name="textColor" />

    </declare-styleable>

    <declare-styleable name="ParsiTextInputLayout">

        <attr name="useParsiDigits" />
        <attr name="typefaceStyle" />

    </declare-styleable>

</resources>