<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Pidget.AppTheme.DarkActionbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Pidget.AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Pidget.BrandedLaunch" parent="Pidget.AppTheme">
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="Pidget.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Pidget.BrandedLaunch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Pidget.BrandedLaunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Pidget.BrandedLaunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextViewVerySmallWithoutMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_very_small</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@drawable/bg_btn_accent</item>
    </style>

    <style name="EditTextMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LogoDiamond">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ButtonMainScreen">
        <item name="android:background">@drawable/bg_btn_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minEms">5</item>
        <item name="android:maxEms">5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">-5dp</item>
    </style>



</resources>